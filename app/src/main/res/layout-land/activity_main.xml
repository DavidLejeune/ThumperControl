<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/MainScreen">

    <TextView android:text="David&apos;s RC" android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#546de7"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imgPlay"
        android:src="@drawable/gta"
        android:layout_marginRight="86dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgAbout"
        android:src="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="onAboutClick"
        />

    <ImageView
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:id="@+id/imgAuto"
        android:src="@drawable/auto2"
        android:onClick="onAutoClick"
        android:layout_below="@+id/imgPlay"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:id="@+id/imgMan"
        android:src="@drawable/man"
        android:onClick="onManClick"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/imgPlay"
        android:layout_toStartOf="@+id/imgPlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Manual         (hardcore)"
        android:id="@+id/textView6"
        android:layout_below="@+id/imgAuto"
        android:textAlignment="center"
        android:textColor="#8ff3ad"
        android:clickable="true"
        android:onClick="onManClick"
        android:layout_alignEnd="@+id/imgMan"
        android:layout_alignStart="@+id/imgMan"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Automatic          (noob)"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/imgAuto"
        android:layout_alignStart="@+id/imgAuto"
        android:textColor="#8ff3ad"
        android:clickable="true"
        android:onClick="onAutoClick"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView7"
        android:src="@drawable/vives"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Powered by \nVives &amp; NDW Libraries"
        android:id="@+id/textView15"
        android:textSize="9sp"
        android:typeface="monospace"
        android:textColor="#fa3838"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/textView38"
        android:textColor="#dd3939"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true"
        android:layout_above="@+id/imageView7"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e"
        android:id="@+id/textView39"
        android:textColor="#e1df36"
        android:layout_alignTop="@+id/textView38"
        android:layout_toEndOf="@+id/textView38"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="o"
        android:id="@+id/textView40"
        android:textColor="#362f57"
        android:layout_alignTop="@+id/textView39"
        android:layout_toEndOf="@+id/textView39"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="P"
        android:id="@+id/textView41"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true"
        android:layout_alignTop="@+id/textView40"
        android:layout_toEndOf="@+id/textView40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="i"
        android:id="@+id/textView42"
        android:textColor="#a08178"
        android:layout_alignTop="@+id/textView41"
        android:layout_toEndOf="@+id/textView41"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x"
        android:id="@+id/textView43"
        android:textColor="#fa041d"
        android:layout_alignTop="@+id/textView42"
        android:layout_toEndOf="@+id/textView42"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e"
        android:id="@+id/textView44"
        android:textColor="#6a02fc"
        android:layout_alignTop="@+id/textView43"
        android:layout_toEndOf="@+id/textView43"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="l"
        android:id="@+id/textView45"
        android:textColor="#96d767"
        android:layout_alignTop="@+id/textView44"
        android:layout_toEndOf="@+id/textView44"
        android:onClick="onNeopixelClick"
        android:textSize="30dp"
        android:clickable="true" />


</RelativeLayout>
