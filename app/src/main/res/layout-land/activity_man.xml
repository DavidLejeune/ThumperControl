<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.vives.student.david.d_rc.ManActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/man"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgLeftThrottle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#dfb52b" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgRightThrottle"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignBottom="@+id/imgLeftThrottle"
        android:background="#dfb52b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subtitleManual"
        android:id="@+id/txtSubtitle"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/txtSpeed2"
        android:layout_alignBottom="@+id/txtSpeed2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtSpeedLeft"
        android:text="@string/txtSpeedLeft"
        android:layout_marginLeft="29dp"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="#fbd206"
        android:layout_below="@+id/txtSpeedTitle"
        android:layout_alignEnd="@+id/txtSpeedTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtSpeedRight"
        android:text="000"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="#fbd206"
        android:layout_below="@+id/txtSpeed2"
        android:layout_alignEnd="@+id/txtSpeed2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtSpeedTitle"
        android:id="@+id/txtSpeedTitle"
        android:layout_alignTop="@+id/txtSpeed2"
        android:layout_toEndOf="@+id/imgLeftThrottle"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtSpeed2"
        android:id="@+id/txtSpeed2"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imgRightThrottle"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="20sp"
        android:id="@+id/imgDisplayNeo"
        android:layout_below="@+id/txtSpeedLeft"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtBatteryVoltage"
        android:id="@+id/txtBatteryVoltageTitle"
        android:layout_above="@+id/txtBatteryVoltage"
        android:layout_alignStart="@+id/txtSubtitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtBatteryVoltage"
        android:text="000"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="#fbd206"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
