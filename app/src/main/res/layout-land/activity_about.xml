<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.vives.student.david.d_rc.AboutActivity">

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/imageView"
        android:src="@drawable/info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="David&apos;s RC"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#5134e0"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Author : D.Lejeune"
        android:id="@+id/textView3"
        android:textColor="#f1600c"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Created : Nov 2015"
        android:id="@+id/textView4"
        android:textColor="#f1600c"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forget all other programs. THIS is the GREATEST program EVER . Accept no substitute !!"
        android:id="@+id/textView5"
        android:typeface="monospace"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="false"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView8"
        android:src="@drawable/vives"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Powered by \nVives &amp; NDW Libraries"
        android:id="@+id/textView16"
        android:textSize="9sp"
        android:typeface="monospace"
        android:textColor="#fa3838"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView8" />
</RelativeLayout>
